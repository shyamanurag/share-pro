{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "node scripts/generate-client-only.js && next build"
      }
    }
  ],
  "env": {
    "PRISMA_SKIP_MIGRATIONS": "true",
    "PRISMA_SCHEMA_DISABLE_MIGRATIONS": "true",
    "PRISMA_CLIENT_NO_SCHEMA_PUSH": "true"
  },
  "build": {
    "env": {
      "PRISMA_SKIP_MIGRATIONS": "true",
      "PRISMA_SCHEMA_DISABLE_MIGRATIONS": "true",
      "PRISMA_CLIENT_NO_SCHEMA_PUSH": "true"
    }
  }
}